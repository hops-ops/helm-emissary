# code: language=yaml
#
# Output XR status from $state.status
#

{{- $xr := getCompositeResource . }}
{{- $s := $state.status }}
---
apiVersion: {{ $xr.apiVersion }}
kind: {{ $xr.kind }}
status:
  ready: {{ $s.ready }}
  crds:
    name: {{ $s.crds.name }}
    namespace: {{ $s.crds.namespace }}
    ready: {{ $s.crds.ready }}
  ingress:
    name: {{ $s.ingress.name }}
    namespace: {{ $s.ingress.namespace }}
    ready: {{ $s.ingress.ready }}
